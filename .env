
# ROLE: "HUB" or "NODE"
MODE=NODE

# --- NODE CONFIGURATION (If MODE=NODE) ---
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/voximplant_status
# The secret the HUB must provide to manage this NODE
ADMIN_SECRET=secret-node-1
PORT=3001

# --- EMAIL CONFIGURATION ---
# Primary: Mailchimp Transactional (Mandrill)
MAILCHIMP_API_KEY=your_mailchimp_api_key_here
# Secondary: SMTP Fallback
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_SECURE=false
SMTP_FROM=status@voximplant.com

# --- HUB CONFIGURATION (If MODE=HUB) ---
# Master login for the support hub
ADMIN_USER=admin
ADMIN_PASS=password
# List of nodes to manage
DASHBOARDS=[{"id":"node-1","name":"Production NA","url":"http://localhost:3001","adminSecret":"secret-node-1","color":"#3B82F6"}]
PORT=3000

# AI Configuration
API_KEY=your_gemini_api_key_here
